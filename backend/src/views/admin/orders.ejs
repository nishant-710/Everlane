<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pending Orders</title>
</head>

<body style="margin: 0; font-family: Arial, sans-serif; background-color: #f4f6f8">
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

        <!-- Main content -->
        <div style="margin-left: 220px">
            <!-- Header -->
            <%- include('partials/header') %>

                <!-- Orders Section -->
                <div style="
      max-width: 1000px;
      margin: 40px auto;
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
    ">
                    <h2 style="text-align: center; color: #333; margin-bottom: 30px">
                        Pending Order Approvals
                    </h2>

                    <table style="
        width: 100%;
        border-collapse: collapse;
        text-align: center;
        margin-top: 20px;
      ">
                        <tr style="background-color: #f0f0f0">
                            <th style="padding: 12px; border: 1px solid #ddd">Name</th>
                            <th style="padding: 12px; border: 1px solid #ddd">Email</th>
                            <th style="padding: 12px; border: 1px solid #ddd">Items</th>
                            <th style="padding: 12px; border: 1px solid #ddd">Actions</th>
                        </tr>

                        <% if (transactions.length> 0) {
                            transactions.forEach(user => { %>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd">
                                    <%= user.userId.name %>
                                </td>
                                <td style="padding: 10px; border: 1px solid #ddd">
                                    <%= user.userId.email %>
                                </td>
                                <td style="padding: 10px; border: 1px solid #ddd; text-align: left">
                                    <% if (user.orderId.items.length> 0) { %>
                                        <ul style="margin: 0; padding-left: 16px">
                                            <% user.orderId.items.forEach(item=> { %>
                                                <li>
                                                    <strong>
                                                        <%= item.productId.name %>
                                                    </strong> - Qty: <%= item.quantity %>
                                                </li>
                                                <% }) %>
                                        </ul>
                                        <% } else { %>
                                            No items
                                            <% } %>
                                </td>
                                <td style="padding: 10px; border: 1px solid #ddd">
                                    <div style="display: flex; justify-content: center; gap: 8px">
                                        <form method="POST" action="/admin/approve/<%= user._id %>">
                                            <button style="
                    padding: 6px 12px;
                    background-color: #28a745;
                    color: white;
                    border: none;
                    border-radius: 4px;
                    cursor: pointer;
                  ">
                                                Approve
                                            </button>
                                        </form>

                                        <form method="POST" action="/admin/reject/<%= user._id %>">
                                            <button style="
                    padding: 6px 12px;
                    background-color: #dc3545;
                    color: white;
                    border: none;
                    border-radius: 4px;
                    cursor: pointer;
                  ">
                                                Reject
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) } %>
                    </table>
                </div>
        </div>
</body>

</html>